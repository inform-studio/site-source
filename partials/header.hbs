    @media (min-width: 60rem) {
      html {line-height: 1.5;}
      .headshot {
        width: 200px;
        height: 200px
      }
      .nav-links {
        font-size: 1.15rem;
      }
      .index-button {
        max-width: 20rem;
      }
      code {
        font-size: 0.8rem !important;
      }
      pre code {
        padding: 1rem !important;
      }
      .nav-bar {
        margin-top: -0.25rem;
      }
    }
    @media (max-width: 60rem) {
      .grid-item {
      padding: 0.125rem;
      }
      .grid-spacer {
      padding-left: 0.125rem;
