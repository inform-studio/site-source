    }
    .selected {
     border-bottom: 3px solid black;
    }
    .b-button {
      box-sizing: border-box;
    }
    a {
      color: #0074D9;
    }
    code {
      font-size: 0.7rem;
    }
    .contents :not(img) {
      max-width: 30em;
    }
    .blog :not(.lang-highlight):not(code) {
       max-width: 36em;
    }
    pre code {
      width: 100%;
      border: 1px solid rgb(0, 0, 0, 0.8);
      border-radius: .25rem;
      padding: 0.5rem;
      box-sizing: border-box;
    }
    pre {
     white-space: pre-wrap;       /* css-3 */
     white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
     white-space: -pre-wrap;      /* Opera 4-6 */
     white-space: -o-pre-wrap;    /* Opera 7 */
     word-wrap: break-word;       /* Internet Explorer 5.5+ */
    }
    .contents img {
      width: 100%;
      border: 1px solid rgb(0, 0, 0, 0.8);
      border-radius: .25rem;
      box-sizing: border-box;
    }
    .video-thumb::-internal-media-controls-overlay-cast-button {
      display: none;
    }
    .fade-in {
        opacity: 0;
        transition: 0.15s ease-in;
      }
    .fade-in:hover {
        opacity: 1;
      }
      /* Styling for lazy loaded images */

      .lazy {
        opacity:0;
        transition: opacity 1s linear;
      }

      .lazy.initial {
        transition: none !important;
      }
      .lazy.initial,
      .lazy.loaded,
      .lazy.error {
        opacity: 1 !important;
      }
